{
  "manifest_version": 3,
  "name": "SafeSpaces Kids Text Shield",
  "version": "0.1.0",
  "description": "Real-time text safety filtering with parent alerts.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["http://localhost:8787/*", "https://*/*", "http://*/*"],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "SafeSpaces"
  }
}
